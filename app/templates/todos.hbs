<section class="todoapp">
  <header class="header">
    <h1>Todos</h1>
    {{input type="text" class="new-todo" placeholder="What needs to be done?" value=newTitle action="createTodo"}}
  </header>
  <section class="main">
    {{outlet}}
    {{input type="checkbox" class="toggle-all" checked=allAreDone}}
  </section>
  <footer class="footer">
    <span class="todo-count">
      <strong>{{remaining}}</strong> {{inflection}} left
    </span>
    <ul class="filters">
      <li>
        {{#link-to "todos.index" activateClass="selected"}}All{{/link-to}}
      </li>
      <li>
        {{#link-to "todos.active" activateClass="selected"}}Active{{/link-to}}
      </li>
      <li>
        {{#link-to "todos.completed" activateClass="selected"}}Completed{{/link-to}}
      </li>
    </ul>
    {{#if hasCompleted}}
      <button class="clear-completed" {{action "clearCompleted"}}>
        Clear completed ({{completed}})
      </button>
    {{/if}}
  </footer>
</section>
<footer class="info">
  <p>Double-click to edit a todo</p>
</footer>
